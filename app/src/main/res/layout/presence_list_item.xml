<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/margin_micro"
    android:layout_marginBottom="@dimen/margin_micro">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_student_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_default"
        android:layout_marginTop="@dimen/margin_default"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_big"
        app:layout_constraintEnd_toStartOf="@+id/img_add"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Lucas Bella Vitta Mosca" />

    <ImageView
        android:id="@+id/img_add"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="@dimen/margin_default"
        android:src="@drawable/ic_round_add_circle_24"
        app:layout_constraintBottom_toBottomOf="@id/txt_student_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/txt_student_name" />

</androidx.constraintlayout.widget.ConstraintLayout>